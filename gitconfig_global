[user]
	name = ShadowStar
	email = orphen.leiliu@gmail.com
[core]
	logallrefupdates = true
	autocrlf = input
	excludesfile = ~/.gitignore_global
	attributesFile = ~/.gitattributes_global
	editor = vim
[commit]
	template = ~/.gitcommit_template
[color]
	branch = auto
	diff = auto
	status = auto
[rebase]
	autoStash = true
[pull]
	rebase = true
[push]
	default = current
[merge]
	ff = false
	conflictStyle = diff3
	tool = vimdiff3
[alias]
	addp = add -p
	fc = fetch -p
	fa = fetch -p --all
	sd = ls-files -d
	sm = ls-files -m
	so = ls-files -o --directory
	ss = status -uno -s
	st = status -sb
	ci = commit -v -uno
	co = checkout
	br = branch -vv
	bf = branch -f
	ba = branch -vv -a
	bd = branch-date
	brnew = checkout --orphan
	di = difftool --extcmd='icdiff -H' -y
	df = diff
	dc = diff --cached
	lg = log --name-status
	gp = "!git gc; git push"
	mylog = "!git log --author $(git config user.name)"
	info = config -l
	mg = merge --no-ff
	patch = !git --no-pager diff
	slog = "log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold cyan)%h%C(reset) - %C(bold yellow)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold red)- %an%C(reset)%C(bold green)%d%C(reset)' --all"
	brmap = "log --graph --simplify-by-decoration --pretty=format:'%d' --all"
[pager]
	slog = less -eRX
	di = less -eRX
	diff = diff-so-fancy | less -eRX
	patch = less -eRX
	brmap = less -eRX
[sendemail]
	smtpserver = smtp.gmail.com
	smtpuser = orphen.leiliu@gmail.com
	smtpserverport = 587
	smtpencryption = tls
	confirm = auto
[http]
	cookiefile = ~/.gitcookies
;	proxy = socks5://127.0.0.1:1080
[https]
;	proxy = socks5://127.0.0.1:1080

[diff-so-fancy]
	changeHunkIndicators = false
	stripLeadingSymbols = false
	markEmptyLines = false
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red bold 52
	newNormal = green
	newHighlight = green bold 22
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
