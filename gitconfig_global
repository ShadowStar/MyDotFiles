[alias]
	addp = add -p
	fc = fetch -p
	fa = fetch -p --all
	sd = ls-files -d
	sm = ls-files -m
	so = ls-files -o --directory
	ss = status -uno -s
	st = status -sb
	ci = commit -v -uno
	co = checkout
	br = branch -vv
	bf = branch -f
	ba = branch -vv -a
	bd = branch-date
	brnew = checkout --orphan
	di = difftool --extcmd=icdiff -y
	df = diff
	dc = diff --cached
	lg = log --name-status
	gp = "!git gc; git push"
	mylog = "!git log --author $(git config user.name)"
	info = config -l
	mg = merge --no-ff
	patch = !git --no-pager diff
